<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="onImageClickListener"
            type="br.com.ilhasoft.voy.ui.shared.OnAddImageClickListener" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="@{() -> onImageClickListener.onClickAddImage(image)}">

        <br.com.ilhasoft.voy.shared.widget.SquareImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@color/white_six" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_add" />

        <ImageButton
            android:id="@+id/remove"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:onClick="@{() -> onImageClickListener.onClickRemove(image)}"
            android:paddingBottom="8dp"
            android:paddingEnd="0dp"
            android:paddingLeft="8dp"
            android:paddingRight="0dp"
            android:paddingStart="8dp"
            android:paddingTop="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_remove" />

    </FrameLayout>

</layout>