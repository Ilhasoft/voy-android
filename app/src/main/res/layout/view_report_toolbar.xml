<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="themeName"
            type="String" />

        <variable
            name="showReportAlert"
            type="Boolean" />

        <variable
            name="presenter"
            type="br.com.ilhasoft.voy.ui.report.detail.ReportDetailPresenter" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageButton
                style="@style/RippleButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_weight="0.20"
                android:onClick="@{() -> presenter.onClickNavigateBack()}"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:text="@{themeName}"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Santa Catarina" />

            <ImageButton
                style="@style/RippleButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_weight="0.15"
                android:onClick="@{() -> presenter.onClickReportAlert()}"
                android:src="@drawable/ic_report_rejected"
                android:visibility="@{showReportAlert ? View.VISIBLE : View.GONE}"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/expanded_menu"
                style="@style/RippleButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_weight="0.15"
                android:onClick="@{() -> presenter.onClickPopupMenu()}"
                android:src="@drawable/ic_expanded_menu" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:background="@color/colorAccent" />

    </FrameLayout>

</layout>