<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="username"
            type="String" />

        <variable
            name="password"
            type="String" />

        <variable
            name="actionLogin"
            type="String" />

        <variable
            name="presenter"
            type="br.com.ilhasoft.voy.ui.login.LoginPresenter" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="23.4dp"
            android:layout_marginTop="90.6dp"
            android:src="@drawable/ic_avatars_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:text="@string/hey"
            android:textColor="@color/bright_sky_blue"
            android:textSize="40sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:hint="@string/username_hint"
            android:text="@{username}"
            android:textColorLink="@color/black_12" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11.5dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:text="@{password}"
                android:textColorLink="@color/black_12"
                app:validateMinLength="@{6}"
                app:validateMinLengthMessage="@{@string/min_length_error_message}"/>

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:text="@string/login_feedback_error"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="12sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_button"
            android:text="@{actionLogin}"
            android:textColor="@color/cool_grey"
            app:onClickListener="@{presenter}" />

    </LinearLayout>

</layout>
