<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="report"
            type="br.com.ilhasoft.voy.models.Report" />

        <variable
            name="pending"
            type="Boolean" />

        <variable
            name="presenter"
            type="br.com.ilhasoft.voy.ui.report.ReportsPresenter" />

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:clipToPadding="false"
        android:onClick="@{() -> presenter.navigateToReportDetail(report)}"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardElevation="2dp"
        tools:cardBackgroundColor="@color/black_12">

        <ImageView
            android:id="@+id/expanded_menu"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:src="@{report.status == 0 ? @drawable/ic_status_resend : @drawable/ic_status_waiting}"
            android:visibility="@{pending ? View.VISIBLE : View.GONE }" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_default_img_profile" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:text="@{report.createdAt}"
                android:textColor="@color/black"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                tools:text="Aug 4, 2017" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image"
                android:layout_toRightOf="@+id/image"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{report.title}"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Rivereiet, conseadipiscing elit, sed do eiusmorem, Rivereiet, conseadipiscing elit, sed do eiusmorem " />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/image"
                android:layout_toRightOf="@+id/image"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{report.description}"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="Lorem ipsu m dolor sit amet, coed iscingelit, sed doet, conseadipisci" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</layout>